{
    "name": "netlogs",
    "version": "0.0.12",
    "description": "Web extension for custom network logs representation",
    "main": "index.js",
    "author": "artboomy",
    "repository": "https://github.com/Artboomy/netlogs",
    "license": "MIT",
    "private": true,
    "scripts": {
        "postinstall": "npx husky install",
        "lint": "npx tsc --noEmit && npx eslint ./src --max-warnings=0 --ext .ts,.tsx",
        "build": "npx webpack --config webpack.dev.js",
        "build:prod": "npm run lint && npx webpack --config webpack.prod.js",
        "build:analyze": "npm run lint && npx webpack --config webpack.analyze.js",
        "build:watch": "npx webpack --config webpack.dev.js --watch",
        "package": "npm run build:prod && tar -C dist -caf netlogs.zip *",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx tsc --noEmit && lint-staged"
        }
    },
    "dependencies": {
        "base16": "1.0.0",
        "classnames": "2.2.6",
        "codemirror": "5.59.4",
        "jszip": "^3.6.0",
        "lodash.clonedeep": "4.5.0",
        "lodash.isequal": "4.5.0",
        "nanoid": "3.1.22",
        "react": "17.0.1",
        "react-codemirror2": "7.2.1",
        "react-dnd": "14.0.2",
        "react-dnd-html5-backend": "14.0.0",
        "react-dom": "17.0.1",
        "react-inspector": "https://github.com/Artboomy/react-inspector/releases/download/5.3.5/react-inspector-5.3.5.tgz",
        "react-jss": "10.5.0",
        "react-use": "17.2.4",
        "zustand": "3.3.3"
    },
    "devDependencies": {
        "@babel/core": "^7.13.10",
        "@storybook/addon-actions": "^6.3.2",
        "@storybook/addon-essentials": "^6.3.2",
        "@storybook/addon-links": "^6.3.2",
        "@storybook/react": "^6.3.2",
        "@types/base16": "1.0.2",
        "@types/chrome": "0.0.127",
        "@types/classnames": "2.2.11",
        "@types/codemirror": "0.0.108",
        "@types/har-format": "1.2.5",
        "@types/lodash.clonedeep": "4.5.6",
        "@types/lodash.isequal": "4.5.5",
        "@types/react": "17.0.0",
        "@types/react-dom": "17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "babel-loader": "^8.2.2",
        "circular-dependency-plugin": "^5.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "5.1.1",
        "esbuild-loader": "^2.13.1",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-react": "^7.22.0",
        "husky": "4.3.6",
        "lint-staged": "10.5.3",
        "prettier": "2.2.1",
        "style-loader": "2.0.0",
        "tsconfig-paths-webpack-plugin": "3.3.0",
        "typescript": "4.3.5",
        "webpack": "^5.11.1",
        "webpack-bundle-analyzer": "^4.4.0",
        "webpack-cli": "^4.3.1",
        "webpack-merge": "^5.7.3"
    },
    "lint-staged": {
        "*.(js|jsx|ts|tsx|scss|md|html|json)": [
            "npx prettier --write",
            "git add"
        ],
        "*.{js,jsx,ts,tsx}": [
            "npx eslint --cache --fix --max-warnings=0 --ext .ts,.tsx"
        ]
    }
}
