{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "es2022",
        "jsx": "react-jsx",
        "lib": ["es2022", "dom"],
        "jsxImportSource": "@emotion/react",
        "strict": true,
        "incremental": true,
        "moduleResolution": "Node",
        "tsBuildInfoFile": ".cache/tsbuildinfo",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "src"
    },
    "include": ["src/**/*"],
    "references": [{ "path": "./tsconfig.node.json" }],
    "exclude": ["node_modules", "test_build", "src/secrets.json", ".cache"]
}
